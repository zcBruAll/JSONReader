<Window x:Class="JSONReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSONReader"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <GroupBox x:Name="grpParentNode" Header="Parent node(s)" Margin="10,0,600,10">
            <TreeView x:Name="trvParentNode" BorderThickness="0, 0, 0, 0" ItemsSource="{Binding ParentNodes}" SelectedItemChanged="trvParentNode_SelectedItemChanged">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                        <TextBlock Text="{Binding Name}" />
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>

        </GroupBox>
        <GroupBox x:Name="grpProperties" Header="Properties" Margin="205,0,10,10"/>

    </Grid>
</Window>
